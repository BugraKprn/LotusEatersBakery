@model Bakery.Library.Entity.Product
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--================End Main Header Area =================-->
<section class="banner_area">
    <div class="container">
        <div class="banner_text">
            <h3>Details</h3>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/">Product</a></li>
                <li><a href="#">@Model.ProductName</a></li>
            </ul>
        </div>
    </div>
</section>
<!--================End Main Header Area =================-->

<!--================Product Details Area =================-->
<section class="product_details_area p_100">
    <div class="container">
        <div class="row product_d_price">
            <div class="col-lg-6">
                <div class="product_img"><img class="img-fluid" src="@Url.Content("~/StaticFiles")/@Model.BigImage" alt="@Model.ProductName"></div>
            </div>
            <div class="col-lg-6">
                <div class="product_details_text">
                    <h4>@Model.ProductName</h4>
                    @Html.Raw(@Model.Description)
                    <h5>Price : <span>CHF @(String.Format("{0:N}", Model.Price))</span></h5>
                </div>
            </div>
        </div>
        <div class="product_tab_area">
            <nav>
                <div class="nav nav-tabs" id="nav-tab" role="tablist">
                    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Allergens</a>
                </div>
            </nav>
            <div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
                    @Html.Raw(Model.Allergen)
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Product Details Area =================-->